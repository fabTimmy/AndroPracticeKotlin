<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DiceActivity">

    <TextView
            android:text="DiceRoll"
            android:layout_width="228dp"
            android:layout_height="40dp" android:id="@+id/display_txt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold" android:textAlignment="center"
            android:textSize="30sp"/>
    <Button
            android:text="Try Again"
            android:layout_width="146dp"
            android:layout_height="55dp" android:id="@+id/reset_button"
            android:layout_marginTop="8dp"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            app:layout_constraintTop_toBottomOf="@+id/display_txt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>